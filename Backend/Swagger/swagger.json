{
    "openapi": "3.0.0",
    "info": {
      "title": "BankWise",
      "description": "The BankWise Web Banking Application",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://example.com/api"
      }
    ],
    "paths": {
      "/hello": {
        "get": {
          "summary": "Returns a hello message",
          "responses": {
            "200": {
              "description": "A simple hello message",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "message": {
                        "type": "string"
                      }
                    },
                    "example": {
                      "message": "Hello, World!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  